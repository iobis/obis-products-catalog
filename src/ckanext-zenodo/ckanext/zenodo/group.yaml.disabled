scheming_version: 2
group_type: group
about: Ocean Expert Institutions
about_url: https://github.com/iobis

fields:

- field_name: title
  label: Name
  validators: ignore_missing unicode_safe
  form_snippet: large_text.html
  form_attrs:
    data-module: slug-preview-target
  form_placeholder: eg. Marine Biological Laboratory

- field_name: name
  label: URL
  validators: not_empty unicode_safe name_validator group_name_validator
  form_snippet: slug.html
  form_placeholder: eg. marine-biological-laboratory

- field_name: description
  label: Description
  form_snippet: markdown.html
  form_placeholder: A brief description of the institution

- field_name: image_url
  label: Image URL
  preset: group_url_upload
  form_placeholder: http://example.com/my-image.jpg

- field_name: institution_url
  label: Institution Website
  form_placeholder: https://www.mbl.edu
  display_snippet: link.html